<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_quote_product_add_after">
        <observer name="plego_launch_add_to_cart" instance="Plego\Launch\Observer\SalesQuoteProductAddAfter" />
    </event>
    <event name="wishlist_add_product">
        <observer name="plego_launch_add_to_wishlist" instance="Plego\Launch\Observer\WishlistAddProduct" />
    </event>
    <event name="controller_action_predispatch_multishipping_checkout_index">
        <observer name="plego_launch_initiate_checkout_multi" instance="Plego\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_checkout_onepage_index">
        <observer name="plego_launch_initiate_checkout_onepage" instance="Plego\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_checkout_index_index">
        <observer name="plego_launch_initiate_checkout_index_index" instance="Plego\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_catalogsearch_result_index">
        <observer name="plego_launch_search" instance="Plego\Launch\Observer\Search" />
    </event>
    <event name="catalog_controller_product_init_after">
        <observer name="plego_launch_product_init_after" instance="Plego\Launch\Observer\CatalogControllerProductInitAfter" />
    </event>
</config>