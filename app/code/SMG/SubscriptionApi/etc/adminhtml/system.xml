<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="subscriptionapi" translate="label" type="text" sortOrder="3010" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Subscription Settings</label>
            <tab>smg</tab>
            <resource>SMG_SubscriptionApi::settings</resource>
            <group id="settings" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Subscription Settings</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>smg/subscription/active</config_path>
                </field>
                <field id="usecsrf" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enforce CSRF</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>smg/subscription/usecsrf</config_path>
                </field>
            </group>
            <group id="seasonal" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Seasonal Test Mode</label>
                <field id="seasonal_test_mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Test Mode</label>
                    <comment>WARNING: DOO NOT ENABLE IN PRODUCTION ENVIRONMENTS. When test mode is enabled it will force all future subscriptions to exist in 10 minute increments from creation dates. This will allow us to test future dated orders are working correctly with the Recurly webhoooks.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>smg/subscription/seasonal_test_mode</config_path>
                </field>
                <field id="seasonal_test_minutes" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Seasonal Test Minutes</label>
                    <comment>The number of minutes to include between subscriptions when Seasonal Test Mode is Enabled.</comment>
                    <validate>validate-digits validate-zero-or-greater validate-no-html-tags</validate>
                    <config_path>smg/subscription/seasonal_test_minutes</config_path>
                </field>
            </group>
            <group id="days" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Subscription Ship Days</label>
                <field id="ship_days_start" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ship Start Days</label>
                    <comment>Number of days to open shipment before application window start date.</comment>
                    <validate>validate-digits validate-zero-or-greater validate-no-html-tags</validate>
                    <config_path>smg/subscription/ship_days_start</config_path>
                </field>
                <field id="ship_days_end" translate="label" type="text" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Ship End Days</label>
                    <comment>Number of days to close shipment before application window ends.</comment>
                    <validate>validate-digits validate-zero-or-greater validate-no-html-tags</validate>
                    <config_path>smg/subscription/ship_days_end</config_path>
                </field>
            </group>
        </section>
        <section id="payment">
            <group id="recurly" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Recurly Payment</label>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>recurly/payment/active</config_path>
                </field>
                <field id="apikey" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Private API Key</label>
                    <comment>e.g 012345678901234567890123456789ab</comment>
                    <validate>validate-no-html-tags</validate>
                    <config_path>recurly/payment/apikey</config_path>
                </field>
                <field id="publicapikey" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Public API Key</label>
                    <comment>e.g sc-ABCDEFGHI123456789</comment>
                    <validate>validate-no-html-tags</validate>
                    <config_path>recurly/payment/publicapikey</config_path>
                </field>
                <field id="subdomain" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Subdomain</label>
                    <validate>validate-no-html-tags</validate>
                    <config_path>recurly/payment/subdomain</config_path>
                </field>
            </group>
        </section>
    </system>
</config>
