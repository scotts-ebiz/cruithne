<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/subscription/process" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\SubscriptionInterface" method="addSubscriptionToCart" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/createSubscription" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\SubscriptionInterface" method="createSubscription" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/subscription/renewSubscription" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\SubscriptionInterface" method="renewSubscription" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
    <route url="/V1/subscription/check" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\RecurlyInterface" method="checkRecurlySubscription" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/cancel" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\RecurlyInterface" method="cancelRecurlySubscription" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/process-invoice" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\RecurlyInterface" method="processSeasonalInvoice" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/get-sub-data-for-sync" method="GET">
        <service class="SMG\SubscriptionApi\Api\Interfaces\SubscriptionInterface" method="getSubscriptionDataForSync" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
	<route url="/V1/subscription/cancelSubscription" method="POST">
        <service class="SMG\SubscriptionApi\Api\Interfaces\SubscriptionInterface" method="cancelSubscription" />
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
