<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/subscription/process" method="POST">
        <service class="SMG\SubscriptionApi\Api\SubscriptionInterface" method="addSubscriptionToCart" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/check" method="POST">
        <service class="SMG\SubscriptionApi\Api\RecurlyInterface" method="checkRecurlySubscription" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/subscription/create" method="POST">
        <service class="SMG\SubscriptionApi\Api\RecurlyInterface" method="createRecurlySubscription" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
