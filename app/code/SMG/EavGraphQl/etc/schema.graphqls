type Query {
   customAttributeFilter(filter_type: String, attributes: [AttributeFilterInput!]!): CustomAttributeFilter @resolver(class: "SMG\\EavGraphQl\\Model\\Resolver\\CustomAttributeFilter") @doc(description: "The customAttributeFilters matching products for given attributes options.") @cache(cacheable: false)
