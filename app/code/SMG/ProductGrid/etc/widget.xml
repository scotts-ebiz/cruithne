<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\ProductGrid\Block\Widget\Productgrid" id="smg_productgrid_productgrid">
        <label>Product Grid</label>
        <description>Display products in grid.</description>
        <parameters>
            <!-- Product Name Customization -->
            <parameter name="productNameCustomizationLabel" visible="true" xsi:type="block">
                <label>PRODUCT NAME CUSTOMIZATION</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="productNameColor" visible="true" xsi:type="text">
                <label>Product Name Text Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="productNameTextSize" visible="true" xsi:type="select"
                       source_model="SMG\ProductGrid\Model\Source\productNameTextSize">
                <label>Product Name Text Size (in rem)</label>
            </parameter>
            <parameter name="productNameTextStyle" visible="true" xsi:type="multiselect"
                       source_model="SMG\ProductGrid\Model\Source\productNameTextStyle">
                <label>Product Name Text Style</label>
            </parameter>


            <!-- Product Headline Customization -->
            <parameter name="productHeadlineCustomizationLabel" visible="true" xsi:type="block">
                <label>PRODUCT HEADLINE CUSTOMIZATION</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="productHeadlineColor" visible="true" xsi:type="text">
                <label>Product Headline Text Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="productHeadlineTextSize" visible="true" xsi:type="select"
                       source_model="SMG\ProductGrid\Model\Source\productHeadlineTextSize">
                <label>Product Headline Text Size (in rem)</label>
            </parameter>
            <parameter name="productHeadlineTextStyle" visible="true" xsi:type="multiselect"
                       source_model="SMG\ProductGrid\Model\Source\productHeadlineTextStyle">
                <label>Product Headline Text Style</label>
            </parameter>


            <!-- Product 1 Settings -->
            <parameter name="prodlabelone" visible="true" xsi:type="block">
                <label>PRODUCT #1</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="prodnameone" visible="true" xsi:type="text" required="true">
                <label>Product #1 Name</label>
            </parameter>
            <parameter name="prodheadlineone" visible="true" xsi:type="text">
                <label>Product #1 Headline</label>
            </parameter>
            <parameter name="prodimageone" visible="true" xsi:type="block">
                <label>Product #1 Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="prodbgimageone" visible="true" xsi:type="block">
                <label>Product #1 Background Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="productSubTextOne" visible="true" xsi:type="text">
                <label>Product #1 Sub Text</label>
            </parameter>
            <parameter name="prodbuttontextone" visible="true" xsi:type="text">
                <label>Product #1 Button Text</label>
            </parameter>
            <parameter name="prodbuttonlinkone" visible="true" xsi:type="text">
                <label>Product #1 Button Link</label>
            </parameter>


            <!-- Product 2 Settings -->
            <parameter name="prodlabeltwo" visible="true" xsi:type="block">
                <label>PRODUCT #2</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="prodnametwo" visible="true" xsi:type="text">
                <label>Product #2 Name</label>
            </parameter>
            <parameter name="prodheadlinetwo" visible="true" xsi:type="text">
                <label>Product #2 Headline</label>
            </parameter>
            <parameter name="prodimagetwo" visible="true" xsi:type="block">
                <label>Product #2 Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="prodbgimagetwo" visible="true" xsi:type="block">
                <label>Product #2 Background Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="productSubTextTwo" visible="true" xsi:type="text">
                <label>Product #2 Price</label>
            </parameter>
            <parameter name="prodbuttontexttwo" visible="true" xsi:type="text">
                <label>Product #2 Button Text</label>
            </parameter>
            <parameter name="prodbuttonlinktwo" visible="true" xsi:type="text">
                <label>Product #2 Button Link</label>
            </parameter>


            <!-- Product 3 Settings -->
            <parameter name="prodlabelthree" visible="true" xsi:type="block">
                <label>PRODUCT #3</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="prodnamethree" visible="true" xsi:type="text">
                <label>Product #3 Name</label>
            </parameter>
            <parameter name="prodheadlinethree" visible="true" xsi:type="text">
                <label>Product #3 Headline</label>
            </parameter>
            <parameter name="prodimagethree" visible="true" xsi:type="block">
                <label>Product #3 Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="prodbgimagethree" visible="true" xsi:type="block">
                <label>Product #3 Background Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="productSubTextThree" visible="true" xsi:type="text">
                <label>Product #3 Price</label>
            </parameter>
            <parameter name="prodbuttontextthree" visible="true" xsi:type="text">
                <label>Product #3 Button Text</label>
            </parameter>
            <parameter name="prodbuttonlinkthree" visible="true" xsi:type="text">
                <label>Product #3 Button Link</label>
            </parameter>
        </parameters>
    </widget>
</widgets>