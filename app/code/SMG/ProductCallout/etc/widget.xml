<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\ProductCallout\Block\Widget\Productcallout" id="smg_productcallout_productcallout">
        <label>Product Callout</label>
        <description>Display product banner and text.</description>
        <parameters>
            <!-- Customize Banner Headline -->
            <parameter name="bannerHeadlineCustomizeLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BANNER HEADLINE</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="bannerheadline" visible="true" xsi:type="text" required="true">
                <label>Banner Headline</label>
            </parameter>
            <parameter name="bannerheadlinecolor" visible="true" xsi:type="text">
                <label>Banner Headline Color (in #xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="headlinetextstyle" visible="true" xsi:type="multiselect" source_model="SMG\ProductCallout\Model\Source\HeadlineTextStyles">
                <label>Banner Headline Style</label>
            </parameter>

            <!-- Customize Banner Headline -->
            <parameter name="bannerTextCustomizeLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BANNER TEXT</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="bannertext" visible="true" xsi:type="block">
                <label>Banner Text</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\TextAreaField" />
            </parameter>
            <parameter name="bannertextlinecolor" visible="true" xsi:type="text">
                <label>Banner Text Color (in #xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="bannertextsize" visible="true" xsi:type="select"
                       source_model="SMG\ProductCallout\Model\Source\TextSize">
                <label>Banner Text Size (in rem)</label>
            </parameter>
            <parameter name="textstyle" visible="true" xsi:type="multiselect" source_model="SMG\ProductCallout\Model\Source\TextStyles">
                <label>Banner Text Style</label>
            </parameter>
            <parameter name="textalignclass" visible="true" xsi:type="select" source_model="SMG\ProductCallout\Model\Source\TextAlignSelect">
                <label>Banner Container Alignment</label>
            </parameter>
            <parameter name="bannerimage" visible="true" xsi:type="block">
                <label>Banner Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="bgcolor" visible="true" xsi:type="text">
                <label>Background Color</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="bgimage" visible="true" xsi:type="block">
                <label>Background Image (Optional)</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="paddingtop" visible="true" xsi:type="text">
                <label>Background Top Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="paddingbottom" visible="true" xsi:type="text">
                <label>Background Bottom Padding (in %)</label>
                <value>0</value>
            </parameter>
        </parameters>
    </widget>
</widgets>