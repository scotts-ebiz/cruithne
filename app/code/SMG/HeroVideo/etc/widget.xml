<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\HeroVideo\Block\Widget\Herovideo" id="smg_herovideo_herovideo">
        <label>Hero Video</label>
        <description>Display hero video and text.</description>
        <parameters>

            <!-- Headline Customization -->
            <parameter name="bannerHeadlineCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE HEADLINE</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="bannerheadline" visible="true" xsi:type="text" required="true">
                <label>Headline Text</label>
            </parameter>
            <parameter name="bannerheadlinecolor" visible="true" xsi:type="text">
                <label>Headline Desktop Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="bannerheadlineMobileColor" visible="true" xsi:type="text">
                <label>Headline Mobile Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="headlinetextstyle" visible="true" xsi:type="multiselect" source_model="SMG\HeroVideo\Model\Source\HeadlineTextStyles">
                <label>Headline Style</label>
            </parameter>


            <!-- Blurb Customization -->
            <parameter name="bannerTextCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BLURB</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="bannertext" visible="true" xsi:type="text">
                <label>Blurb Text</label>
            </parameter>
            <parameter name="bannertextlinecolor" visible="true" xsi:type="text">
                <label>Blurb Text Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="bannertextlineMobileColor" visible="true" xsi:type="text">
                <label>Blurb Text Mobile Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="bannertextsize" visible="true" xsi:type="select"
                       source_model="SMG\HeroVideo\Model\Source\TextSize">
                <label>Blurb Text Size</label>
            </parameter>
            <parameter name="textstyle" visible="true" xsi:type="multiselect"
                       source_model="SMG\HeroVideo\Model\Source\TextStyles">
                <label>Blurb Text Style</label>
            </parameter>
            <parameter name="textalignclass" visible="true" xsi:type="select" source_model="SMG\HeroVideo\Model\Source\TextAlignSelect">
                <label>Text Align</label>
            </parameter>


            <!-- Video Customization -->
            <parameter name="videoCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE VIDEO SECTION</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="videotext" visible="true" xsi:type="text">
                <label>Video CTA</label>
            </parameter>
            <parameter name="videotextcolor" visible="true" xsi:type="text">
                <label>Video CTA Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="videotextsize" visible="true" xsi:type="select"
                       source_model="SMG\HeroVideo\Model\Source\VideoTextSize">
                <label>Video CTA Size</label>
            </parameter>
            <parameter name="iconcolor" visible="true" xsi:type="text">
                <label>Icon Color (#xxxxxx)</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="iconbackgroundcolor" visible="true" xsi:type="text">
                <label>Icon Background Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="iframeVideoLink" visible="true" xsi:type="text">
                <label>iFrame Video Link</label>
            </parameter>

            <!-- Hide from CMS user -->
            <parameter name="iframeWidth" visible="false" xsi:type="text">
                <label>iFrame Width (560)</label>
                <value>560</value>
            </parameter>
            <!-- Hide from CMS user -->
            <parameter name="iframeHeight" visible="false" xsi:type="text">
                <label>iFrame Height (315)</label>
                <value>315</value>
            </parameter>

            <!-- Removing the iframeId for now as deemed not needed
            <parameter name="iframeId" visible="true" xsi:type="text">
                <label>iFrame Id</label>
            </parameter>
            -->



            <!-- Background Image Customization -->
            <parameter name="backgroundImageCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BACKGROUND IMAGE</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="videobackgroundimage" visible="true" xsi:type="block">
                <label>Background Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>

            <!-- Hiding from CMS User | visable:false -->
            <parameter name="videopaddingtop" visible="false" xsi:type="text">
                <label>Background Top Padding (%)</label>
                <value>15</value>
            </parameter>

            <!-- Hiding from CMS User | visable:false -->
            <parameter name="videopaddingbottom" visible="false" xsi:type="text">
                <label>Background Bottom Padding (in %)</label>
                <value>15</value>
            </parameter>

        </parameters>

    </widget>
</widgets>