<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\ProductCalloutText\Block\Widget\Productcallouttext" id="smg_productcallouttext_productcallouttext">
        <label>Product Callout - Text Only</label>
        <description>Display product text and headline.</description>
        <parameters>
            <parameter name="headline" visible="true" xsi:type="text" required="true">
                <label>Callout Headline</label>
            </parameter>
            <parameter name="callouttext" visible="true" xsi:type="block">
                <label>Callout Text</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\TextAreaField" />
            </parameter>
        </parameters>
    </widget>
</widgets>