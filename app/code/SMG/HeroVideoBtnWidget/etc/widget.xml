<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\HeroVideoBtnWidget\Block\Widget\Herovideobtnwidget"
            id="smg_herovideobtnwidget_herovideobtnwidget">
        <label>Hero Video with Btn</label>
        <description>Display hero video and btn for launching video.</description>
        <parameters>
            <!-- Headline Customization -->
            <parameter name="heroVideoBtnHeadlineLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE HEADLINE</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="heroVideoBtnHeadlineTxt" visible="true" xsi:type="text" required="true">
                <label>Headline Text</label>
            </parameter>
            <parameter name="heroVideoBtnHeadlineTxtColor" visible="true" xsi:type="text">
                <label>Headline Desktop Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="heroVideoBtnHeadlineTxtMobileColor" visible="true" xsi:type="text">
                <label>Headline Mobile Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="heroVideoBtnHeadlineStyle" visible="true" xsi:type="multiselect"
                       source_model="SMG\HeroVideoBtnWidget\Model\Source\HeadlineTextStyles">
                <label>Headline Style</label>
            </parameter>


            <!-- Blurb Customization -->
            <parameter name="heroVideoBtnBlurbLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BLURB</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="heroVideoBtnBlurbTxt" visible="true" xsi:type="text">
                <label>Blurb Text</label>
            </parameter>
            <parameter name="heroVideoBtnBlurbColor" visible="true" xsi:type="text">
                <label>Blurb Text Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="heroVideoBtnBlurbMobileColor" visible="true" xsi:type="text">
                <label>Blurb Text Mobile Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="heroVideoBtnBlurbTxtSize" visible="true" xsi:type="select"
                       source_model="SMG\HeroVideoBtnWidget\Model\Source\TextSize">
                <label>Blurb Text Size (in rem)</label>
            </parameter>
            <parameter name="heroVideoBtnBlurbTxtStyle" visible="true" xsi:type="multiselect"
                       source_model="SMG\HeroVideoBtnWidget\Model\Source\TextStyles">
                <label>Blurb Text Style</label>
            </parameter>
            <parameter name="heroVideoBtnBlurbTxtAlign" visible="true" xsi:type="select"
                       source_model="SMG\HeroVideoBtnWidget\Model\Source\TextAlignSelect">
                <label>Text Align</label>
            </parameter>


            <!-- Video Customization -->
            <parameter name="heroVideoBtnVideoLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE VIDEO SECTION</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="heroVideoBtnVideoCtaTxt" visible="true" xsi:type="text">
                <label>CTA Text</label>
                <value>Learn More</value>
            </parameter>
            <parameter name="heroVideoBtnVideoCtaTxtColor" visible="true" xsi:type="text">
                <label>CTA Text Color (#xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="heroVideoBtnIframeVideoLink" visible="true" xsi:type="text">
                <label>iFrame Video Link</label>
            </parameter>
            <!-- Hide from CMS user -->
            <parameter name="heroVideoBtnIframeWidth" visible="false" xsi:type="text">
                <label>iFrame Width (560)</label>
                <value>560</value>
            </parameter>
            <!-- Hide from CMS user -->
            <parameter name="heroVideoBtnIframeHeight" visible="false" xsi:type="text">
                <label>iFrame Height (315)</label>
                <value>315</value>
            </parameter>
        </parameters>
    </widget>
</widgets>


