<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/recommendations/quiz/new" method="POST">
        <service class="SMG\Recommendations\Api\QuizInterface" method="new" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/recommendations/quiz/save" method="POST">
    	<service class="SMG\Recommendations\Api\QuizInterface" method="save" />
    	<resources>
    		<resource ref="anonymous" />
    	</resources>
    </route>
    <route url="/V1/recommendations/quiz/result" method="POST">
        <service class="SMG\Recommendations\Api\QuizInterface" method="getResult" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/recommendations/quiz/previous" method="POST">
        <service class="SMG\Recommendations\Api\QuizInterface" method="getCompleted" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
