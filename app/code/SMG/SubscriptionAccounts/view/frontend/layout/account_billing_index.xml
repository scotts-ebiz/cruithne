<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <script src="https://js.recurly.com/v4/recurly.js" src_type="url" />
        <css src="https://js.recurly.com/v4/recurly.css" src_type="url" />
        <css src="SMG_SubscriptionAccounts::css/account-general.css" />
        <css src="SMG_SubscriptionAccounts::css/account-billing.css" />
    </head>
    <body>
        <referenceContainer name="content">
            <block class="SMG\SubscriptionAccounts\Block\Billing" name="smg_account_billing" template="account/billing/index.phtml" cacheable="false"/>
        </referenceContainer>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Billing Information</argument>
            </action>
        </referenceBlock>
    </body>
</page>
