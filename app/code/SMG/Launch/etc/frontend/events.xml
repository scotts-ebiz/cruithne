<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_quote_product_add_after">
        <observer name="smg_launch_add_to_cart" instance="SMG\Launch\Observer\SalesQuoteProductAddAfter" />
    </event>

    <event name="controller_action_predispatch_multishipping_checkout_index">
        <observer name="smg_launch_initiate_checkout_multi" instance="SMG\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_checkout_onepage_index">
        <observer name="smg_launch_initiate_checkout_onepage" instance="SMG\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_checkout_index_index">
        <observer name="smg_launch_initiate_checkout_index_index" instance="SMG\Launch\Observer\InitiateCheckout" />
    </event>
    <event name="controller_action_predispatch_catalogsearch_result_index">
        <observer name="smg_launch_search" instance="SMG\Launch\Observer\Search" />
    </event>
    <event name="catalog_controller_product_init_after">
        <observer name="smg_launch_product_init_after" instance="SMG\Launch\Observer\CatalogControllerProductInitAfter" />
    </event>
	<event name="newsletter_subscriber_save_after">
        <observer name="smg_launch_newsletter_subscriber_save_after" instance="SMG\Launch\Observer\SaveNewsletter" />
    </event>
	<event name="sales_quote_remove_item">
        <observer name="smg_launch_sales_quote_remove_item" instance="SMG\Launch\Observer\Removeitem" />
    </event>
	<event name="checkout_cart_update_items_before">
        <observer name="smg_launch_update_items_before" instance="SMG\Launch\Observer\Updatecart" />
    </event>
	
	<event name="controller_action_postdispatch_checkout_cart_couponPost">
        <observer name="smg_launch_couponPost" instance="SMG\Launch\Observer\couponPost" />
    </event>
	
</config>