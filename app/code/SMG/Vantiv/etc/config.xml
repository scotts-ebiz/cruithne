<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <vantiv_keypadpayment>
                <model>SMG\Vantiv\Model\PaymentMethod</model>
                <payment_action>true</payment_action>
                <active>1</active>
                <username backend_model="Magento\Config\Model\Config\Backend\Encrypted"></username>
                <password backend_model="Magento\Config\Model\Config\Backend\Encrypted"></password>
                <title>Keypad Authorization</title>
                <order_status>pending_payment</order_status><!-- set default order status-->
                <group>offline</group>
            </vantiv_keypadpayment>
       </payment>
    </default>
</config>         
