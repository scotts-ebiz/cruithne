<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/smg/orders" method="POST">
        <service class="SMG\Api\Model\OrdersManagementInterface" method="getOrders" />
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="startDate" force="true">%startDate%</parameter>
            <parameter name="endDate" force="true">%endDate%</parameter>
        </data>
    </route>
</routes>