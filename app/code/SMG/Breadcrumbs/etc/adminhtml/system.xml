<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="web">
            <group id="default">
                <field id="show_category_breadcrumbs" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Breadcrumbs for Category Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="show_product_breadcrumbs" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Breadcrumbs for Product Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
				<field id="show_particularly_cms_breadcrumbs" translate="label" type="multiselect" sortOrder="8" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Breadcrumbs On CMS Pages</label>
                    <source_model>SMG\Breadcrumbs\Model\Config\Source\CmsPageList</source_model>
                </field>
            </group>
        </section>
    </system>
</config>