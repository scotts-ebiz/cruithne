<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\ProductCalloutVideo\Block\Widget\Productcalloutvideo" id="smg_productcalloutvideo_productcalloutvideo">
        <label>Product Callout Video</label>
        <description>Display product video and text.</description>
        <parameters>

            <!-- Banner Headline Customization -->
            <parameter name="pcvBannerHeadlineCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BANNER HEADLINE</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="pcvBannerHeadline" visible="true" xsi:type="text" required="true">
                <label>Banner Headline</label>
            </parameter>
            <parameter name="pcvBannerHeadlineColor" visible="true" xsi:type="text">
                <label>Banner Headline Color (Hex Code #xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="pcvBannerHeadlineStyle" visible="true" xsi:type="multiselect" source_model="SMG\ProductCalloutVideo\Model\Source\HeadlineTextStyles">
                <label>Banner Headline Style</label>
            </parameter>


            <!-- Banner Text Customization -->
            <parameter name="pcvBannerTextCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE BANNER TEXT</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="pcvBannerText" visible="true" xsi:type="text">
                <label>Banner Text</label>
            </parameter>
            <parameter name="pcvBannerTextColor" visible="true" xsi:type="text">
                <label>Banner Text Color (in #xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="pcvBannerTextSize" visible="true" xsi:type="select"
                       source_model="SMG\ProductCalloutVideo\Model\Source\TextSize">
                <label>Banner Text Size (in rem)</label>
            </parameter>
            <parameter name="pcvBannerTextStyle" visible="true" xsi:type="multiselect" source_model="SMG\ProductCalloutVideo\Model\Source\TextStyles">
                <label>Banner Text Style</label>
            </parameter>
            <parameter name="pcvTextContainerAlignment" visible="true" xsi:type="select"
                       source_model="SMG\ProductCallout\Model\Source\TextAlignSelect">
                <label>Text Container Alignment</label>
            </parameter>


            <!-- Video Customization -->
            <parameter name="pcvVideoCustomLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE VIDEO</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="pcvIconColor" visible="true" xsi:type="text">
                <label>Icon Color (in #xxxxxx)</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="pcvIconBackgroundColor" visible="true" xsi:type="text">
                <label>Icon Background Color (in #xxxxxx)</label>
                <value>#000000</value>
            </parameter>
            <parameter name="pcvIframeVideoLink" visible="true" xsi:type="text">
                <label>iFrame Video Link</label>
            </parameter>
            <parameter name="pcvIframeWidth" visible="true" xsi:type="text">
                <label>iFrame Width (in px)</label>
                <value>560</value>
            </parameter>
            <parameter name="pcvIframeHeight" visible="true" xsi:type="text">
                <label>iFrame Height (in px)</label>
                <value>315</value>
            </parameter>


            <!-- Customize Callout Img / Background -->
            <parameter name="pcvImgBgCustomizeLabel" visible="true" xsi:type="block">
                <label>CUSTOMIZE IMAGE / BACKGROUND</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\LabelField" />
            </parameter>
            <parameter name="pcvCalloutImage" visible="true" xsi:type="block">
                <label>Callout Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="pcvBgPaddingTop" visible="true" xsi:type="text">
                <label>Background Top Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="pcvBgPaddingBottom" visible="true" xsi:type="text">
                <label>Background Bottom Padding (in %)</label>
                <value>0</value>
            </parameter>
        </parameters>
    </widget>
</widgets>