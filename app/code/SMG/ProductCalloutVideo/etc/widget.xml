<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="SMG\ProductCalloutVideo\Block\Widget\Productcalloutvideo" id="smg_productcalloutvideo_productcalloutvideo">
        <label>Product Callout Video</label>
        <description>Display product video and text.</description>
        <parameters>
            <parameter name="bannerheadline" visible="true" xsi:type="text" required="true">
                <label>Banner Headline</label>
            </parameter>
            <parameter name="bannerheadlinecolor" visible="true" xsi:type="text">
                <label>Banner Headline Color (Hex Code #xxxxxx)</label>
                <value>#fff</value>
            </parameter>
            <parameter name="bannertext" visible="true" xsi:type="text">
                <label>Banner Text</label>
            </parameter>
            <parameter name="bannertextlinecolor" visible="true" xsi:type="text">
                <label>Banner Text Color (in #xxxxxx)</label>
                <value>#fff</value>
            </parameter>
            <parameter name="videotext" visible="true" xsi:type="block">
                <label>Video Text</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\TextAreaField" />
            </parameter>
            <parameter name="videotextcolor" visible="true" xsi:type="text">
                <label>Video Text Color (in #xxxxxx)</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="iconcolor" visible="true" xsi:type="text">
                <label>Icon Color (in #xxxxxx)</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="iconbackgroundcolor" visible="true" xsi:type="text">
                <label>Icon Background Color (in #xxxxxx)</label>
                <value>#ffffff</value>
            </parameter>
            <parameter name="videobackgroundimage" visible="true" xsi:type="block">
                <label>Background Image</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\ImageChooser" />
            </parameter>
            <parameter name="videopaddingtop" visible="true" xsi:type="text">
                <label>Background Top Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="videopaddingbottom" visible="true" xsi:type="text">
                <label>Background Bottom Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="textalignclass" visible="true" xsi:type="select" source_model="SMG\ProductCallout\Model\Source\TextAlignSelect">
                <label>Text Container Alignment</label>
            </parameter>
            <parameter name="textpaddingleft" visible="true" xsi:type="text">
                <label>Text Container Left Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="textpaddingright" visible="true" xsi:type="text">
                <label>Text Container Right Padding (in %)</label>
                <value>0</value>
            </parameter>
            <parameter name="videoembedcode" visible="true" xsi:type="block">
                <label>Video Embed Code</label>
                <block class="SMG\ParameterTypes\Block\Adminhtml\Widget\TextAreaField" />
            </parameter>
        </parameters>
    </widget>
</widgets>